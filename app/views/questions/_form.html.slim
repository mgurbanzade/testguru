h1.question-title = resource_header(@question, 'question')
= form_with model: [@test, @question], local: true do |f|
  = render 'shared/errors', resource: @question
  = f.text_field :body, class: 'form-control', placeholder: "#{t('.question_content')}"
  br
  .btn-row
    = f.submit form_button(@question), class: 'btn btn-success'
    = link_to t('back'), @question.test, class: 'btn btn-primary'
